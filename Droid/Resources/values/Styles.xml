<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<color name="White">#ffffff</color>
	<color name="DarkGray">#222222</color>
	<color name="Red">#B80000</color>
	<color name="Golden">#E68A00</color>
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
    	<item name="android:colorPrimary">@color/DarkGray</item>
    	<item name="android:colorPrimaryDark">@color/DarkGray</item> 
    	<item name="android:colorAccent">@color/DarkGray</item> 
    	<item name="android:windowContentTransitions">true</item> 
    	<item name="android:windowAllowEnterTransitionOverlap">true</item> 
    	<item name="android:windowAllowReturnTransitionOverlap">true</item> 
    	<item name="android:windowSharedElementEnterTransition">@android:transition/move</item> 
    	<item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    	<item name="android:actionBarStyle">@style/MyActionBarItemBackground</item>
    	<item name="android:itemTextAppearance">@style/MyOverflowMenuTextColor</item>
    	<item name="android:colorPressedHighlight">@color/Golden</item>
    	<item name="android:colorLongPressedHighlight">@color/Golden</item>
    	<item name="android:colorFocusedHighlight">@color/Golden</item>
    	<item name="android:colorActivatedHighlight">@color/Golden</item>
    	<item name="android:activatedBackgroundIndicator">@color/DarkGray</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBarStyle</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialog</item>
    </style>

    <style name="MyActionBarItemBackground" parent="@android:style/Widget.Holo.Light.ActionBar">
    	<item name="android:background">@color/White</item>
  	</style>

  	<style name="MyOverflowMenuTextColor">
    	<item name="android:textColor">@color/DarkGray</item>
  	</style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/DarkGray</item>
    </style>

    <style name="MyActionBarTabBarStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
    	<item name="android:background">@color/White</item>
  	</style>

  	<style name="MyAlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
  		<item name="android:background">@color/White</item>
  		<item name="android:colorAccent">@color/DarkGray</item>
	</style>

	<style name="Theme.Splash" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
<!--    	<item name="android:windowBackground">@drawable/loadingBackground</item>-->
    	<item name="android:windowNoTitle">true</item>
  	</style>
</resources>
